{
  "compilerOptions": {
    "outDir": "./out",
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "dom",
      "esnext",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "./node_modules",
    "../out"
  ],
  "files": [
    "./src/app.ts"
  ]
}
